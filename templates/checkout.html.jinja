<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class = "bg-blue-900 text-white min-h-screen">
  {% include "components/navbar.html.jinja"%}

      {% for message in get_flashed_messages()%}
        <ol class="bg-red-500 text-white font-bold rounded-t px-4 py-2 mt-4 mx-10">
         {{ message }}
        </ol>
    {% endfor%}
      
      <main>
          <h1 class="text-4xl text-center mt-10">
              Checkout
          </h1>
      </main>


  <main class="grid grid-cols-2 justify-items-evenly text-black max-wr-40 max-h-full mx-auto p-6 mb-5">
  
  
  <div>
    {% for x in cart %}

    <a class="grid bg-gray-200 rounded-lg mt-3 font-bold"> 
  
      <img class="h-38 w-38 rounded border" src="{{ x ['Image'] }} ">

      <div class="grid grid-cols-4 gap-4 p-3 justify-items-center">

        <div class="">{{ x ["Name"]}} </div>

        <div class=""> ${{ x ["Price"]}} </div>

        <div class="">${{ x ["Price"] * x["Quantity"]}} </div>

        <div class="flex space-x-4 justify-center mb-3"> 
    
      </div>  
    
      <form method="post" action="/cart/{{x['ProductID']}}/update_qty">
        <input name="qty" type="number" value= "{{ x ['Quantity']}}" min="1" max="10">
        <button type="submit">Update</button>
      </form>

     <form method="post" action="/cart/{{x['ProductID']}}/delete">
        <button type="submit">Delete</button>
      </form>
      </div>
    
      </a>

    
    {% endfor %}
  </div>
  
  <form method="post" class="bg-white p-10 rounded-lg shadow-lg  mx-10 mb-10 grid-cols-2">
	<h1 class="text-center text-2xl mb-6 text-gray-600 font-bold font-sans">Shipping Address:</h1>

		<div>
					
            <label class="text-gray-800 font-semibold block my-3 text-md" for="street">Street</label>
			<input class="w-full bg-gray-100 px-4 py-2 rounded-lg focus:outline-none text-black" name="street" id="street" placeholder="Street"/>

						
            <label class="text-gray-800 font-semibold block my-3 text-md" for="state">State</label>
		    <input class="w-full bg-gray-100 px-4 py-2 rounded-lg focus:outline-none text-black"  name="state" id="state" placeholder="State"/>

            <label class="text-gray-800 font-semibold block my-3 text-md" for="city">City</label>
		    <input class="w-full bg-gray-100 px-4 py-2 rounded-lg focus:outline-none text-black"  name="city" id="city" placeholder="City"/>

            <label class="text-gray-800 font-semibold block my-3 text-md" for="postal">Postal</label>
		    <input class="w-full bg-gray-100 px-4 py-2 rounded-lg focus:outline-none text-black"  name="Postal" id="postal" placeholder="Postal"/>

    </div>
		
        <button type="submit" class="w-full mt-6 mb-3 bg-indigo-600 rounded-lg px-4 py-2 text-lg text-white tracking-wide font-semibold font-sans">Place Order</button>
                        

		</form>

  </main>



  


  </body>
</html>
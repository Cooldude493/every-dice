<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class = "bg-blue-900 text-white min-h-screen">
  {% include "components/navbar.html.jinja"%}

    <h1 class="text-4xl text-center mt-10">
      Browse
    </h1>
<main class="grid grid-cols-3 gap-4 max-w-4xl mx-auto p-6 mb-5 text-black">
  
  {% for x in products %}

  <a href="/product/{{ x ['ID']}}" class="grid bg-gray-200 rounded-lg mt-3"> 
  
    <img class="h-35 mx-auto rounded-lg mt-3" src="{{ x ['Image'] }} "> <br>

    <div class="pl-3 font-bold text-sm">{{ x ["Name"]}} </div>

    <div class="text-right font-bold text-sm pb-3 pr-3"> ${{ x ["Price"]}} </div>


  </a>
  {% endfor %}
</main>

  </body>
</html>
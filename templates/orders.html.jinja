<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class = "bg-blue-900 text-white min-h-screen">
  {% include "components/navbar.html.jinja"%}

      {% for message in get_flashed_messages()%}
        <ol class="bg-red-500 text-white font-bold rounded-t px-4 py-2 mt-4 mx-10">
         {{ message }}
        </ol>
    {% endfor%}
      
      <main>
          <h1 class="text-4xl text-center mt-10">
              Orders
          </h1>
      </main>


  <main class="grid grid-cols-2 justify-items-evenly text-black max-wr-40 max-h-full mx-auto p-6 mb-5">
  
  
  <div>
    {% for x in orders %}

    <a class="grid bg-gray-200 rounded-lg mt-3 font-bold"> 
  
      

      <div class="grid grid-cols-4 gap-4 p-3 justify-items-center">

        <div class="">TOP: {{ x ["TimeStamp"].strftime('%-m-%-d-%Y')}} </div>

        <div class="">Order#: {{ x ["ID"]}} </div>

        <div class="">Qty: {{ x ["Quantity"]}} </div>

        <div class="">Price: {{ x ["Total"]}} </div>



        <div class="flex space-x-4 justify-center mb-3"> 
    
      </div>  
      </div>
    
      </a>

    
    {% endfor %}
  </div>
  


  </main>



  


  </body>
</html>